<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_bg"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="301dp"
            android:layout_height="600dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp" >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ExtraText">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.154"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.104"
                    app:srcCompat="@drawable/icon_rx" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_variablefont"
                    android:text="Hello user!"
                    android:textFontWeight="1000"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.292"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.077" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_variablefont"
                    android:text="Hello user!"
                    android:textFontWeight="1000"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.292"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.077" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_variablefont"
                    android:text="Prescribed courses:"
                    android:textFontWeight="1000"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.191"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.391" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="138dp"
                    android:layout_height="72dp"
                    android:fontFamily="@font/montserrat_variablefont"
                    android:text="@string/quote"
                    android:textFontWeight="600"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.375"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.166" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="302dp"
                    android:layout_height="237dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.209"
                    app:srcCompat="@drawable/divider" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/medsurg"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    app:cardBackgroundColor="@color/card_blue"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.524"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/rad_blue"
                    app:strokeWidth="0.7dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="150dp"
                        app:srcCompat="@drawable/icon_medsurg" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="90dp"
                        android:paddingTop="9dp"
                        android:fontFamily="@font/montserrat_variablefont"
                        android:text="Medical-Surgical Nursing"
                        android:textFontWeight="1000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_variablefont"
                        android:paddingStart="90dp"
                        android:paddingTop="9dp"
                        android:text="Medical-Surgical Nursing"
                        android:textFontWeight="1000"
                        android:textSize="15sp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/informatics"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    app:cardBackgroundColor="@color/card_blue"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.524"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.681"
                    app:strokeColor="@color/rad_blue"
                    app:strokeWidth="0.7dp" >
                <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:paddingTop="5dp"
                android:paddingEnd="160dp"
                app:srcCompat="@drawable/icon_informatics" />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="90dp"
                    android:paddingTop="9dp"
                    android:fontFamily="@font/montserrat_variablefont"
                    android:text="Nursing Informatics"
                    android:textFontWeight="1000"
                    android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_variablefont"
                        android:paddingStart="90dp"
                        android:paddingTop="9dp"
                        android:text="Nursing Informatics"
                        android:textFontWeight="1000"
                        android:textSize="15sp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/patho"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    app:cardBackgroundColor="@color/card_blue"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.524"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.861"
                    app:strokeColor="@color/rad_blue"
                    app:strokeWidth="0.7dp">
                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="150dp"
                        app:srcCompat="@drawable/icon_patho" />
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="90dp"
                        android:paddingTop="18dp"
                        android:fontFamily="@font/montserrat_variablefont"
                        android:text="Pathophysiology"
                        android:textFontWeight="1000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_variablefont"
                        android:paddingStart="90dp"
                        android:paddingTop="18dp"
                        android:text="Pathophysiology"
                        android:textFontWeight="1000"
                        android:textSize="15sp" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="@color/item_color"
        app:headerLayout="@layout/header"
        app:itemTextColor="@color/login_textColor"
        app:menu="@menu/main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
